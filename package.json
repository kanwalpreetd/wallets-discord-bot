{
  "name": "wallets-discord-bot",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npx ts-node --project tsconfig.json src/index.ts",
    "build:prod": "webpack --mode production --config ./webpack.prod.js",
    "prepare": "husky install",
    "test": "jest",
    "test:ci": "jest --ci"
  },
  "husky": {
    "hooks": {
      "pre-commit": "concurrently 'pretty-quick --staged' 'lint-staged'",
      "post-merge": "yarn install-if-package-changed",
      "post-checkout": "yarn install-if-package-changed"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "eslint --fix --max-warnings 0"
    ]
  },
  "author": "wallet-eng@stellar.org",
  "license": "Apache-2.0",
  "dependencies": {
    "@slack/web-api": "^7.3.1",
    "discord.js": "^14.15.3",
    "dotenv-expand": "^11.0.6",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.2",
    "@stellar/tsconfig": "^1.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.3.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "ts-jest": "^29.2.3",
    "ts-loader": "^9.4.4",
    "typescript": "^5.5.4",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
